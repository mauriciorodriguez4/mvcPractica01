@model mvcPractica01.Models.carreras

@{
    ViewData["Title"] = "Edit";
}

<h1>Edición carerra</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="carrera_id" />
            <div class="form-group">
                <label asp-for="nombre_carrera" class="control-label"></label>
                <input asp-for="nombre_carrera" class="form-control" />
                <span asp-validation-for="nombre_carrera" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="facultad_id" class="control-label"></label>
                <input asp-for="facultad_id" class="form-control" />
                <span asp-validation-for="facultad_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="estado" class="control-label"></label>
                <input asp-for="estado" class="form-control" />
                <span asp-validation-for="estado" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
